<% preference = restaurant.preferences.find_by_user_id(current_user.id) %>

<div class="btn-group">
  <% if preference.present? %>
    <% if preference.like %>
      <span class="btn btn-mini btn-success disabled prefButton">Like</span>
      <%= link_to 'Reset', preference_path(preference), method: :delete, class: "btn btn-mini btn-danger prefButton" %>
    <% else %>
      <%= link_to 'Reset', preference_path(preference), method: :delete, class: "btn btn-mini btn-danger prefButton" %>
      <span class="btn btn-mini btn-success disabled prefButton">Dislike</span>
    <% end %>
  <% else %>
    <%= link_to 'Like', like_restaurant_path(restaurant), method: :post,   class: "btn btn-mini prefButton" %>
    <%= link_to 'Dislike', dislike_restaurant_path(restaurant), method: :post,   class: "btn btn-mini prefButton" %>
  <% end %>

  <%= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-primary btn-mini" %>
</div>
