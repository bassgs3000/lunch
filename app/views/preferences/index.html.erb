<h1 class="offset1">Listing Preferences</h1>
<div class= "hero-unit">
<div class="row-fluid">
  <div class= "span1"><i class="icon-user"></i> Name</div>
  <div class= "span3"><i class="icon-thumbs-up"></i> Likes</div>
  <div class= "span3"><i class="icon-thumbs-down"></i> Dislikes</div>
</div>

<% @preferences.each do |pref| %>
  <div class="row-fluid">

    <div class= "span1">Placeholder</div>
    <div class= "span3"><%= pref.likes %></div>
    <div class= "span3"><%= pref.dislikes %></div>

    <% if user_signed_in? %>
      <%= link_to 'Edit', edit_preference_path(pref), class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>

<br />
<% if user_signed_in? %>
  <%= link_to 'New Preference', new_preference_path, class: "btn btn-success" %>
  <br />
  <br />
<% end %>

<b>Total Likes:</b>
<%= @likes %>

<br />

<b>Total Dislikes:</b>
<%= @dislikes %>

<br />

<b>Total Preferences:</b>
<%= @count %>

<br />
<div id="result">
  <b>Result: </b>
  <br />
</div>
<br />
<%= link_to raw("<i class=\"icon-refresh\"></i> Result"), preferences_path, remote: true, class: "btn" %>
</div>
